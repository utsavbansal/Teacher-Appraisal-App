<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teacher_background"
    tools:context="utsavbansal.teacher_evaluation_app.updateModule">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <TextView
                android:fontFamily="cursive"
                android:id="@+id/txtupdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Details are"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginTop="40dp"
                />


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2">


                <ImageView
                    android:id="@+id/imgupdate"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/arpit"

                    />
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    >
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/teacher_update_camera"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/camera"
                    />
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/teacher_update_select"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/select_pic"
                    />
                </GridLayout>
                <TextView
                    android:fontFamily="cursive"
                    android:id="@+id/txtid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id:"
                    android:layout_marginLeft="10dp"

                    android:textSize="25dp"
                    />


                <TextView
                    android:fontFamily="cursive"
                    android:id="@+id/utxtid"
                    android:layout_width="200dp"
                    android:text="your id will come here"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />

                <TextView
                    android:fontFamily="cursive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Name:"
                    android:textSize="20dp" />

                <EditText
                    android:fontFamily="cursive"
                    android:id="@+id/uedtname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />

                <TextView
                    android:fontFamily="cursive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="  Age:"

                    android:textSize="20dp" />

                <EditText
                    android:fontFamily="cursive"
                    android:id="@+id/uedtage"
                    android:layout_width="200dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />

                <TextView
                    android:fontFamily="cursive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Gender:"
                    android:textSize="20dp" />

                <TextView
                    android:fontFamily="cursive"
                    android:id="@+id/uedtgender"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />

                <TextView
                    android:fontFamily="cursive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Contact:"
                    android:textSize="20dp" />

                <EditText
                    android:fontFamily="cursive"
                    android:id="@+id/uedtcontact"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20dp" />


                <TextView
                    android:fontFamily="cursive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Qualifications:"
                    android:textSize="20dp" />

                <EditText
                    android:fontFamily="cursive"
                    android:id="@+id/uedtqual"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />



                <TextView
                    android:fontFamily="cursive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  University"
                    android:textSize="20dp" />

                <TextView
                    android:fontFamily="cursive"
                    android:id="@+id/uedtuni"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />


                <TextView
                    android:fontFamily="cursive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Email id:"
                    android:textSize="20dp" />

                <EditText
                    android:fontFamily="cursive"
                    android:id="@+id/uedtemail"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />

                <TextView
                    android:fontFamily="cursive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Password"
                    android:textSize="20dp" />


                <EditText
                    android:fontFamily="cursive"
                    android:id="@+id/uedtpassword"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textSize="20dp" />


            </GridLayout>

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/student_update"
                android:layout_marginTop="10dp"
                android:id="@+id/ubtnupdate"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
