<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/student_portal1"
    android:layout_height="match_parent"
    tools:context="utsavbansal.teacher_evaluation_app.Edit_student_profile">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/imgStudent"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:src="@drawable/student" />

            <ImageView
                android:layout_below="@id/imgStudent"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/edit_student_pic"
                android:src="@drawable/arpit"
                />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/imgStudent"
                android:layout_toRightOf="@id/edit_student_pic"
               android:layout_marginLeft="20dp"
                android:background="@drawable/camera"
                android:id="@+id/edit_camera"
                />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/edit_camera"
                android:layout_toRightOf="@id/edit_student_pic"
                android:layout_marginLeft="20dp"
                android:background="@drawable/select_pic"
                android:id="@+id/edit_select"
                />

            <TextView
                android:fontFamily="cursive"
                android:id="@+id/stdprofilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_student_pic"
                android:text="Name:"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:fontFamily="cursive"
                android:id="@+id/stdprofilename_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_student_pic"
                android:layout_toRightOf="@id/stdprofilename" />

            <TextView
                android:fontFamily="cursive"
                android:id="@+id/stdprofileroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stdprofilename"
                android:layout_marginTop="10dp"
                android:text="Roll No.:"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:fontFamily="cursive"
                android:id="@+id/stdprofileroll_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stdprofilename_edit"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/stdprofileroll" />

            <TextView
                android:fontFamily="cursive"
                android:id="@+id/stdprofilecollege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stdprofileroll"
                android:layout_marginTop="10dp"
                android:text="College Name:"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="cursive"
                android:id="@+id/stdprofilecollege_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stdprofilecollege"
                android:layout_marginTop="10dp"

                />

            <TextView
                android:fontFamily="cursive"
                android:id="@+id/stdprofilecontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stdprofilecollege_edit"
                android:layout_marginTop="10dp"
                android:text="Contact:"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:fontFamily="cursive"
                android:id="@+id/stdprofilecontact_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stdprofilecollege_edit"
                android:layout_toRightOf="@id/stdprofilecontact" />

            <TextView
                android:fontFamily="cursive"
                android:id="@+id/stdprofilepass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stdprofilecontact_edit"
                android:layout_marginTop="10dp"
                android:text="Password:"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:fontFamily="cursive"
                android:id="@+id/stdprofilepass_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stdprofilecontact_edit"
                android:layout_toRightOf="@id/stdprofilepass" />

            <Button
                android:id="@+id/stdprofileupdate"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_below="@id/stdprofilepass_edit"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/student_update"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
