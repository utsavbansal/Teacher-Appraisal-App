<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_background"
    tools:context="utsavbansal.teacher_evaluation_app.eject_student_admin">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <TextView
            android:fontFamily="cursive"
            android:id="@+id/txtheader_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    Student's Profile"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/student_pic"
            android:layout_width="150dp"
            android:src="@drawable/arpit"
            android:layout_height="150dp"
            android:layout_below="@id/txtheader_student" />

        <TextView
            android:fontFamily="cursive"
            android:id="@+id/eject_student_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtheader_student"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/student_pic"
            android:text="Name"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="cursive"
            android:id="@+id/eject_student_age"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eject_student_profile"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/student_pic"
            android:text="Age"
            android:textSize="30sp"
            android:textStyle="bold" />



        <TextView
            android:fontFamily="cursive"
            android:id="@+id/eject_student_contact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eject_student_age"
            android:layout_marginTop="10dp"
            android:text="Contact: "
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="cursive"
            android:id="@+id/eject_student_univ123"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eject_student_contact"
            android:layout_marginTop="10dp"
            android:text="University: "
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:fontFamily="cursive"
            android:id="@+id/eject_student_roll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eject_student_univ123"
            android:layout_marginTop="10dp"
            android:text="Roll no: "
            android:textSize="30sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/eject_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eject_student_roll"
            android:layout_marginTop="20dp"
            android:background="@color/colorred"
            android:text="Eject Student" />

        <Button
            android:id="@+id/validate_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eject_student_roll"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/eject_student"
            android:background="@color/colorgreen"
            android:text="Validate Student" />

        <TextView
            android:id="@+id/eject_student_status_result"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fontFamily="cursive"

            android:layout_below="@id/eject_student"
            android:textColor="@color/colorgreen" />


    </RelativeLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>
