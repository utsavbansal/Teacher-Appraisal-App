<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/student_portal1"
    tools:context="utsavbansal.teacher_evaluation_app.Login">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:src="@drawable/student" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ejected"
            android:textSize="30sp"
            android:fontFamily="cursive"
            android:textColor="@color/colorred"
            />

        <TextView
            android:id="@+id/txtid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:layout_marginTop="50dp"
            android:text="Roll Number"
            android:textColor="@color/colorPrimary"

            android:textSize="30dp" />

        <EditText
            android:id="@+id/edtloginid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Roll number"
            android:fontFamily="cursive"
            android:inputType="text" />

        <TextView
            android:id="@+id/txtpassword"
            android:layout_width="wrap_content"
            android:fontFamily="cursive"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="@color/colorPrimary"


            android:textSize="30dp" />

        <EditText
            android:id="@+id/edtloginpassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:fontFamily="cursive"
            android:hint="Enter Your Password"
            />

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@drawable/submit_student"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
