<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/student_portal1"
    tools:context="utsavbansal.teacher_evaluation_app.Profile">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/stdportal"
                android:src="@drawable/student"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/stdportal"
                android:id="@+id/studentprofile_pic"
                android:src="@drawable/arpit"
                />
            <Spinner
                android:layout_width="fill_parent"
                android:layout_below="@id/stdportal"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:id="@+id/myspinner"

                >

            </Spinner>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvpf"
                android:layout_below="@id/studentprofile_pic"
                android:fontFamily="cursive"
                android:textSize="30sp"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_below="@id/tvpf"
                android:layout_height="wrap_content"
                android:id="@+id/tvpf1"
                android:fontFamily="cursive"
                android:textSize="30sp"
                />
            <TextView
                android:layout_below="@id/tvpf1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvpf2"
                android:fontFamily="cursive"
                android:textSize="30sp"/>
            <TextView
                android:layout_below="@id/tvpf2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvpf3"
                android:fontFamily="cursive"
                android:textSize="30sp"/>

           <TextView
               android:layout_below="@id/tvpf3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvs"
               android:textSize="20sp"
               android:fontFamily="cursive"
                android:layout_marginBottom="20dp"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/tvs"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/teacher_list"
                >
            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>

</android.support.constraint.ConstraintLayout>
